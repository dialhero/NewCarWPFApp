<Window x:Class="NewCarWPFApp.Views.AddCar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewCarWPFApp.Views" xmlns:core="clr-namespace:NewCarWPFApp.Core" d:DataContext="{d:DesignInstance Type=core:ObservableObject}"
        mc:Ignorable="d"
        Title="Tilføj Bil" Height="285" Width="300"
        Background="#606C38">

    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>            
        </Grid.ColumnDefinitions>
        <Label Content="Registreringsnummer" 
               Foreground="#FEFAE0" 
               Margin="25,25,0,0" 
               VerticalAlignment="Top" 
               HorizontalAlignment="Left"
               FontWeight="DemiBold"/>

        <TextBox Height="25"
         Width="234"
         Text="{Binding LicensePlate}"
         Margin="25,50,0,0"
         VerticalAlignment="Top"
         HorizontalAlignment="Left"
         BorderThickness="1"
         BorderBrush="#DDA15E" Grid.ColumnSpan="2">
            <TextBox.Template>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="7">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>

        <Label Content="Model" 
               Foreground="#FEFAE0" 
               Margin="25,100,0,0" 
               VerticalAlignment="Top" 
               HorizontalAlignment="Left"
               FontWeight="DemiBold"/>

        <TextBox Height="25" 
         Width="234" 
         Text="{Binding Model}" 
         Margin="25,125,0,0" 
         VerticalAlignment="Top" 
         HorizontalAlignment="Left" 
         BorderThickness="1" 
         BorderBrush="#DDA15E" 
         Grid.ColumnSpan="2">
            <TextBox.Template>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="7">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>


        <Button Height="30"
        Command="{Binding AddCarCommand}"
        Content="Tilføj"
        Foreground="#FEFAE0"
        Width="70"
        VerticalContentAlignment="Center"
        Padding="5"
        Margin="0,50,115,50"
        VerticalAlignment="Bottom"
        HorizontalAlignment="Right"
        BorderThickness="1"
        BorderBrush="#DDA15E"
        Background="#BC6C25" FontFamily="Cascadia Code" FontWeight="Bold">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="7">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Height="30"
            Command="{Binding AddCarCommand}"
            Content="Luk"
            Foreground="#FEFAE0"
            Width="70"
            VerticalContentAlignment="Center"
            Padding="5"
            Margin="0,0,30,50"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            BorderThickness="1"
            BorderBrush="#DDA15E"
            Background="#FF8E321D" FontFamily="Cascadia Code" FontWeight="Bold" Click="Button_Click" Grid.ColumnSpan="2">

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="7">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
