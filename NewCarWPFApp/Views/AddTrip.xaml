<Window x:Class="NewCarWPFApp.Views.AddTrip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewCarWPFApp.Views" 
        xmlns:core="clr-namespace:NewCarWPFApp.Core" 
        xmlns:viewmodels="clr-namespace:NewCarWPFApp.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:AddTripViewModel}"
        mc:Ignorable="d"
        Title="Tilføj Tur" Height="600" Width="400"
        Background="#606C38">

    <Grid>
        <!-- Her er kolonnerne -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Her er rækkerne -->
        <Grid.RowDefinitions>
            
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Logoteksten -->

        <StackPanel
            Grid.Column="1"
            Grid.Row="1">

            <Button Height="40"
                        Command="{Binding Trip}"
                        Content="Tilføj Ture"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#FEFAE0"
                        Width="120"
                        VerticalContentAlignment="Center"
                        Padding="5"
                        Margin="0 450 0 0"
                        BorderThickness="1"
                        BorderBrush="#DDA15E"
                        Background="#BC6C25" FontFamily="Cascadia Code">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="7">
                            <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>

            <Button Height="40"
    Command="{Binding CloseCommand}"
    Click="Button_Click"
    Content="Luk"
    FontSize="16"
    FontWeight="Bold"
    Foreground="#FEFAE0"
    Width="120"
    VerticalContentAlignment="Center"
    Padding="5"
    Margin="0 20 0 0"
    BorderThickness="1"
    BorderBrush="#DDA15E"
    Background="#FF8E321D" 
    FontFamily="Cascadia Code">


                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
        BorderBrush="{TemplateBinding BorderBrush}"
        BorderThickness="{TemplateBinding BorderThickness}"
        CornerRadius="7">
                            <ContentPresenter HorizontalAlignment="Center"
        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>


        </StackPanel>

        <StackPanel Grid.RowSpan="2">

            <Label Content="Vælg bil fra liste" 
                   FontSize="25"
                    Foreground="#FEFAE0" 
                     Margin="0,40,0,0" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Center"
                    FontWeight="DemiBold"
                   FontFamily="Cascadia Code"/>

            <ComboBox HorizontalAlignment="Center" 
                      Margin="0,10,0,0" 
                      VerticalAlignment="Top" 
                      Width="300">
            </ComboBox>


        </StackPanel>






    </Grid>
</Window>
